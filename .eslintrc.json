{
  "root": true,
  "plugins": [
    "@typescript-eslint"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": [
    "standard",
    "plugin:security/recommended"
  ],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "jest": {
      "version": 26
    },
    "node": {
      "allowModules": [],
      "tryExtensions": [
        ".js",
        ".json",
        ".node",
        ".ts"
      ]
    }
  },
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "no-console": "off",
    "semi": "off",
    "node/no-missing-import": "error"
  }
}
