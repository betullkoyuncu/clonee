{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "filenames/match-regex": "off",
      "no-console": "off",
      "semi": "off",
      "node/no-missing-import": "error"
    }
  }
}
